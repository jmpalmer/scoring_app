  <%= label_tag :blue_team3_cards%>: Red <%= check_box_tag :blue_team3_red %> Yellow <%= check_box_tag :blue_team3_yellow %>  <br/>
  
  <br />
  
  <div class="field">
    <%= label_tag :notes %><br />
    <%= text_area_tag :notes %>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>

